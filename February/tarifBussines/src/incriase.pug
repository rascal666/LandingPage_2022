<!-- @format -->
include ./miksins.pug


html(lang="ru")
	head
		meta(charset="utf-8")
		<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no"/>
		title= "оставить товары"
	body.js-body
		.main_content.mainThank.increase
			header
				include ./modules/toolbar.pug
				.header
					.content
						.header__wrapper
							.header__text
								.header__heading.section_h1 Благодарим за ваше обращение!
								.offer
									p Оставьте номер телефона, по которому специалист по размещению товаров на Пульсе цен может свяжется с вами. 
								+button('{crm_analytics:click_link(Оставить номер,#order,network_actions,НК_РФ_Повышение_цен_Консультация_curData)}', 'Оставить номер', 'section-buttonWhite')
							.header__img
								img(src="https://www.pulscen.ru/system/ckeditor_assets/pictures/303408/content_illyustratsiya.png")
		include ./modules/footer.pug
	p {crm_analytics:show_page(network_actions,НК_РФ_Повышение_цен_curData)}
